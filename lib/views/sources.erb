<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>le TrafficSpy</title>

  <link rel="stylesheet" href="/css/normalize.css" />
  <link rel="stylesheet" href="/css/foundation.css" />
  <link rel="stylesheet" href="/css/font-awesome.css" />
  <link href='http://fonts.googleapis.com/css?family=Quattrocento:700' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="//cdn.oesmith.co.uk/morris-0.4.1.min.css">
  

  <script src="js/vendor/custom.modernizr.js"></script>
  <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
  <script src="//cdn.oesmith.co.uk/morris-0.4.1.min.js"></script>

</head>
<body>
  <div id="blank"></div>
  <div class="fixed">
    <nav class="top-bar">
      <ul class="title-area">
        <!-- Title Area -->
        <li class="name">
          <h1><a href="/sources/<%= @identifier %>">le TrafficSpy</a></h1>
        </li>
        <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
        <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
      </ul>

      <section class="top-bar-section">
        <!-- Right Nav Section -->
        <ul class="right">
          <li class="divider show-for-small"></li>
          <li class="has-form">
           <i class="icon-user"></i><%= @identifier %>
          </li>
        </ul>
      </section>
    </nav>
  </div>

  <div id="main" class="row">
    <div id="sub-nav" class="large-2 columns">
      <ul class="sub-nav">
        <li>
          <a href="/sources/<%= @identifier %>" class="active">
            <i class="icon-dashboard"></i>
            Dashboard
          </a>
        </li>
        <li>
          <a href="/sources/<%= @identifier %>/urls">
            <i class="icon-copy"></i>
            Pages
          </a>
        </li>
        <li>
          <a href="/sources/<%= @identifier %>/response">
            <i class="icon-time"></i>
            Response Times
          </a>
        </li>
        <li>
          <a href="/sources/<%= @identifier %>/campaigns">
            <i class="icon-money"></i>
            Campaigns
          </a>
        </li>
        <li>
          <a href="/sources/<%= @identifier %>/events">
            <i class="icon-group"></i>
            Events
          </a>
        </li>
        <li>
          <a href="/sources/<%= @identifier %>/browsers">
            <i class="icon-globe"></i>
            Browsers
          </a>
        </li>
        <li>
          <a href="/sources/<%= @identifier %>/os">
            <i class="icon-cogs"></i>
            Operating Systems
          </a>
        </li>
        <li>
          <a href="/sources/<%= @identifier %>/resolutions">
            <i class="icon-laptop"></i>
            Screen Resolutions
          </a>
        </li>
      </ul>
    </div>

    <div id="content" class="large-10 columns">
      <div id="content-inner">
        <div class="full-table">
          <h3 class="table-title">Top Pages</h3>
          <h4 class="deeper-link">
            <a href="/sources/<%= @identifier %>/urls">
              View All
              <i class="icon-th-list table-icon"></i>
            </a>
          </h4>
          <div id="pagesChart" style="height: 250px;"></div>
        </div>
        <!-- HERE -->
        <div class="row">
          <div class="full-table">
            <table cellspacing='0'> <!-- cellspacing='0' is important, must stay -->
              <!-- Table Header -->
              <thead>
                <tr>
                  <th>URL</th>
                  <th>Requests</th>
                </tr>
              </thead>
              <!-- Table Header -->

              <!-- Table Body -->
              <tbody>
                <% @sorted_urls.each_with_index do |(url, count), index| %>
                <tr <%= "class='even'" unless index %2 == 0 %>>
                  <td><a href="/sources/<%= @identifier %>/urls<%= url %>"><%= url %></a></td>
                  <td><%= count %></td>
                </tr><!-- Table Row -->
                <% end %>
              </tbody>
              <!-- Table Body -->

            </table>
          </div>
        </div>

        <div class="row">
          <div class="widget">
            <h3 class="table-title">Browsers</h3>
            <h4 class="deeper-link">
              <a href="/sources/<%= @identifier %>/browsers">
                View All
                <i class="icon-th-list table-icon"></i>
              </a>
            </h4>
            <table cellspacing='0'> <!-- cellspacing='0' is important, must stay -->
              <!-- Table Header -->
              <thead>
                <tr>
                  <th>Browser</th>
                  <th>Count</th>
                </tr>
              </thead>
              <!-- Table Header -->

              <!-- Table Body -->
              <tbody>
                <% @browser_breakdown.each do |browser, count| %>
                <tr>
                 <!--  <td><a href="#">http://jumpstartlab.com/ohyeah</a></td> -->
                  <td><%= browser %></td>
                  <td><%= count %></td>
                </tr><!-- Table Row -->
                <% end %>
              </tbody>
              <!-- Table Body -->

            </table>
          </div>

          <div class="widget">
            <h3 class="table-title">Operating Systems</h3>
              <h4 class="deeper-link">
              <a href="/sources/<%= @identifier %>/os">
                View All
                <i class="icon-th-list table-icon"></i>
              </a>
            </h4>
            <table cellspacing='0'> <!-- cellspacing='0' is important, must stay -->
              <!-- Table Header -->
              <thead>
                <tr>
                  <th>OS</th>
                  <th>Count</th>
                </tr>
              </thead>
              <!-- Table Header -->

              <!-- Table Body -->
              <tbody>
                <% @os_breakdown.each do |os, count| %>
                <tr>
                 <!--  <td><a href="#">http://jumpstartlab.com/ohyeah</a></td> -->
                  <td><%= os %></td>
                  <td><%= count %></td>
                </tr><!-- Table Row -->
                <% end %>
              </tbody>
              <!-- Table Body -->

            </table>
          </div>
        </div>
        <div class="row">
          <div class="widget">
            <h3 class="table-title">Screen Resolutions</h3>
            <h4 class="deeper-link">
              <a href="/sources/<%= @identifier %>/resolutions">
                View All
                <i class="icon-th-list table-icon"></i>
              </a>
            </h4>
            <table cellspacing='0'> <!-- cellspacing='0' is important, must stay -->
              <!-- Table Header -->
              <thead>
                <tr>
                  <th>Screen Resolution</th>
                  <th>Count</th>
                </tr>
              </thead>
              <!-- Table Header -->

              <!-- Table Body -->
              <tbody>
                <% @resolution_breakdown.each do |resolution, count| %>
                <tr>
                 <!--  <td><a href="#">http://jumpstartlab.com/ohyeah</a></td> -->
                  <td><%= resolution %></td>
                  <td><%= count %></td>
                </tr><!-- Table Row -->
                <% end %>
              </tbody>
              <!-- Table Body -->

            </table>
          </div>

          <div class="widget">
            <h3 class="table-title">Response Times</h3>
            <h4 class="deeper-link">
            <a href="/sources/<%= @identifier %>/response">
              View All
              <i class="icon-th-list table-icon"></i>
            </a>
          </h4>
            <table cellspacing='0'> <!-- cellspacing='0' is important, must stay -->
              <!-- Table Header -->
              <thead>
                <tr>
                  <th>Page</th>
                  <th>Avg. Response</th>
                </tr>
              </thead>
              <!-- Table Header -->

              <!-- Table Body -->
              <tbody>
                <% @avg_response_times.each do |page, response| %>
                <tr>
                  <td><%= page %></td>
                  <td><%= response %>ms</td>
                </tr><!-- Table Row -->
                <% end %>
              </tbody>
              <!-- Table Body -->

            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
  document.write('<script src=' +
  ('__proto__' in {} ? 'js/vendor/zepto' : 'js/vendor/jquery') +
  '.js><\/script>')
  </script>
  
  <script src="js/foundation.min.js"></script>
